FROM ubuntu:22.04

RUN apt-get update && apt-get install -y \
    qemu-system-x86 \
    bridge-utils \
    iproute2 \
    net-tools \
    iputils-ping \
    procps \
    iptables \
    tcpdump \
    netcat-openbsd \
    curl \
    && rm -rf /var/lib/apt/lists/*

COPY setup-network.sh /usr/local/bin/
COPY setup-network-debug.sh /usr/local/bin/
COPY start-gateway.sh /usr/local/bin/
COPY start-gateway-debug.sh /usr/local/bin/
COPY start-gateway-slirp.sh /usr/local/bin/
COPY start-gateway-tap2.sh /usr/local/bin/
COPY qemu-ifup.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/*.sh

EXPOSE 443

CMD ["/usr/local/bin/start-gateway.sh"]
